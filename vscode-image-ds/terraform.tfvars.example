# ============================================
# REQUIRED VARIABLES
# ============================================

# Your Google Cloud Project ID
project_id = "your-gcp-project-id"

# Environment tag (e.g., dev, staging, prod)
environment = "dev"

# List of developer email addresses who will have access to workstations
developers_email = [
  "developer1@example.com",
  "developer2@example.com"
]

# List of developer names (must match the order of developers_email)
# Used for workstation naming: workstation-<name>
developers_name = [
  "developer1",
  "developer2"
]

# ============================================
# OPTIONAL VARIABLES (with defaults)
# ============================================

# GCP region for workstation deployment
# region = "us-central1"

# IP range for the workstations subnet
# subnetwork_range = "10.2.0.0/16"

# Name of the VPC network
# vpc_name = "workstations-vpc"

# Service account ID for workstations
# cloudworkstations_service_account_id = "cloud-workstations-sa"

# Name of the Artifact Registry repository
# artifact_repo_name = "workstations-custom-images"

# Name of the container image in Artifact Registry
# artifact_image_name = "workstations-vscode"

# ============================================
# ANTIGRAVITY IDE CONFIGURATION (optional)
# ============================================
# Enable Antigravity IDE workstations in addition to VS Code workstations

# Enable creation of Antigravity IDE workstations
# enable_antigravity_workstation = false

# Name of the container image for Antigravity IDE in Artifact Registry
# antigravity_artifact_image_name = "workstations-antigravity"

# Select the folder for Antigravity IDE workstations
# Options: workstation-container-antigravity-v1, workstation-container-antigravity
# antigravity_folder_selection = "workstation-container-antigravity-v1"

# ============================================
# WORKSTATION CLUSTER CONFIGURATION (optional)
# ============================================

# Name of the workstation cluster
# workstation_cluster_name = "tf-ws-cluster"

# Name of the workstation configuration
# workstation_config_name = "tf-ws-config"

# Machine type for workstation VMs
# Options: e2-standard-2, e2-standard-4, e2-standard-8, n2-standard-4, etc.
# machine_type = "e2-standard-4"

# Size of persistent disk for workstation home directory (GB)
# persistent_disk_size_gb = 200

# Type of persistent disk (pd-ssd, pd-balanced, pd-standard)
# persistent_disk_type = "pd-ssd"

# Reclaim policy for persistent disk (DELETE or RETAIN)
# persistent_disk_reclaim_policy = "DELETE"

# Duration after which a workstation will be stopped if idle
# idle_timeout = "7200s"  # 2 hours

# Maximum duration a workstation can run
# running_timeout = "43200s"  # 12 hours

# Duration to wait after enabling APIs
# api_activation_wait = "30s"

# Duration to wait after setting organization policies
# org_policy_wait = "60s"

# Custom labels for resources (optional)
# labels = {
#   "team"        = "engineering"
#   "cost-center" = "development"
# }

# ============================================
# CLOUD BUILD CONFIGURATION (optional)
# ============================================
# Enable scheduled container image rebuilds via Cloud Build + Cloud Scheduler
# When enabled, this creates:
#   - A Cloud Build trigger connected to your GitHub repository
#   - A Cloud Scheduler job to trigger builds on a schedule
#   - Required IAM roles for the build service accounts

# Enable Cloud Build trigger and Cloud Scheduler for scheduled container rebuilds
# schedule_container_rebuilds = false

# GitHub repository owner (username or organization)
# Required if schedule_container_rebuilds = true
# github_repo_owner = "your-github-username"

# GitHub repository name
# github_repo_name = "cloud-workstations"

# Cron schedule for container image rebuilds
# Examples:
#   "0 0 * * 0" - Every Sunday at midnight UTC
#   "0 1 * * *" - Daily at 1am UTC
#   "0 0 1 * *" - Monthly on the 1st at midnight UTC
# container_rebuild_schedule = "0 0 * * 0"

# Service account ID for Cloud Build trigger invocation
# cloudbuild_service_account_id = "cloud-build-sa"
